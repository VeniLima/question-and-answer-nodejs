<%- include ('partials/header') %>

  <body>
    <%- include ('partials/navbar') %>
      <div class="container">
        <hr>
        <h1 class="text-light">Perguntas</h1>
        <hr>
        <a href="/ask" class="btn btn-dark">Perguntar</a>
        <hr>

        <% questions.forEach(question=> { %>
          <br>
          <div class="card">
            <div class="card-body">
              <h3>
                <%= question.title %>
              </h3>
            </div>
            <div class="card-footer">
              <a href="/question/<%= question.id %>"><button type="button" class="btn btn-dark">Responder</button></a>


            </div>
          </div>
          <% }) %>
      </div>
  </body>
  <%- include ('partials/footer') %>